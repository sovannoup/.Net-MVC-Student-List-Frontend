@{
    ViewData["Title"] = "Create Student";
}
@model Student

<div class="card text-center" style="width: 40rem; margin: auto;">
    <div class="card-body">
        <h5 class="card-title">New Student</h5>
        <form method="post" onsubmit="Create()">
            <div class="form-group row py-1">
                <label asp-for="name" class="col-sm-3 col-form-label">Full Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="name" placeholder="Jonh Wick">
                </div>
            </div>
            <div class="form-group row py-1">
                <label asp-for="age" class="col-sm-3 col-form-label">Age</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" asp-for="age" placeholder="0">
                </div>
            </div>
            <button type="submit" class="btn btn-primary my-2 mx-3" style="width:150px">Create</button>
            <a href="/Student" class="card-link">Cancel</a>
        </form>
    </div>
</div>
