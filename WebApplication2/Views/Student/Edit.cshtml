@model WebApplication2.Models.Student
@{
    ViewData["Title"] = "Edit Student";
}

<div class="card text-center" style="width: 40rem; margin: auto;">
    <div class="card-body">
        <h5 class="card-title">Edit Student</h5>
        <form method ="post">
            <div class="form-group row py-1">
                <label asp-for="name" class="col-sm-3 col-form-label">Full Name</label>
                <div class="col-sm-9">
                    <input type="text" value="@Html.DisplayName(Model?.name)" asp-for="name" class="form-control" placeholder="Jonh Wick">
                </div>
            </div>
            <div class="form-group row py-1">
                <label asp-for="age" class="col-sm-3 col-form-label">Age</label>
                <div class="col-sm-9">
                    <input type="number" value="@Html.DisplayName(Model?.age.ToString())" asp-for="age" class="form-control" placeholder="0">
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
                <button type="submit" class="btn btn-primary mx-3 px-5" >Save</button>
                <a href="/Student" class="btn border-1 border-primary mx-3 rounded px-3">Cancel</a>
            </div>
        </form>
    </div>
</div>